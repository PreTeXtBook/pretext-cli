  // Configure tool-specific properties.
  "customizations": {
    "codespaces": {
      "openFiles": [
        "source/main.ptx"
      ]
    },
    "vscode": {
      "settings": {
        "editor.quickSuggestions": {
          "other": "off"
        },
        "editor.snippetSuggestions": "top",
        "xml.validation.enabled": false
      },
      "extensions": ["ms-vscode.live-server", "oscarlevin.pretext-tools"]
    }
  }

